<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Quiz - Admin</title>
  <link rel="stylesheet" href="/css/createSubQuiz.css">
</head>
<body>
  <header>
    <h1>Add New Quiz</h1>
  </header>

  <main>
    <form action="/quiz/create/subquiz", method="post" class="quiz-form" >
      <!-- Select Exam -->
      <div class="form-group">
        <label for="exam">Select Exam:</label>
        <select id="exam" name="heading" required>
          <option value="">-- Choose Exam --</option>
          <% exams.forEach(function(exam){%>
          <option value="<%=exam.heading%>"><%=exam.heading%></option>
          <!-- Add more exams dynamically later -->
        </select>
      </div>

      <!-- Quiz Title -->
      <div class="form-group">
        <label for="title">Quiz Title:</label>
        <input type="text" id="title" name="title" placeholder="Enter quiz title" required>
      </div>

      <!-- Time Limit -->
      <div class="form-group">
        <label for="timeLimit">Time Limit (in minutes):</label>
        <input type="number" id="timeLimit" name="timeLimit" min="1" required>
      </div>

      <!-- Total Marks -->
      <div class="form-group">
        <label for="totalMarks">Total Marks:</label>
        <input type="number" id="totalMarks" name="totalMarks" min="1" required>
      </div>

      <!-- Difficulty -->
      <!-- <div class="form-group">
        <label for="difficulty">Difficulty:</label>
        <select id="difficulty" name="difficulty" required>
          <option value="easy">Easy</option>
          <option value="medium">Medium</option>
          <option value="hard">Hard</option>
        </select>
      </div> -->

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">Add Quiz</button>
    </form>
  </main>

  <script src="/js/createSubQuiz.js"></script>
</body>
</html>

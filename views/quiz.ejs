</head>
<body>

  <!-- Navbar -->
 
  <nav class="navbar">
    <div class="navbar-logo">MOOKBOOK</div>
    <ul class="navbar-links">
      <li><a href="/">Home</a></li>
      <li><a href="/test">Test</a></li>
      <li><a href="/quiz">Quiz</a></li>
      <li><a href="/blog">Blog</a></li>
      <li><a href="/about">About</a></li>
    </ul>
    <div class="navbar-auth">
       <%if(token.length <= 0){%>
      <a href="/login" class="btn">Login</a>
      <a href="/signup" class="btn btn-outline">Sign Up</a>
      <%}else{%>
       <button onclick="openSidebar()" 
          style="top:20px; right:20px; padding:10px 20px; background: none; color:white; border:none; border-radius:5px; cursor:pointer;">
    My Account
  </button>

  <!-- Sidebar -->
  <div id="sidebar" 
       style="position:fixed; top:0; right:-250px; width:250px; height:100%; background-color:#fff3e0; box-shadow:-2px 0 5px rgba(0,0,0,0.3); transition:0.3s; padding:20px; box-sizing:border-box;">
    
    <h3 style="margin-top:0; color:#ff9933;">Account</h3>
    <hr>
    <button style="width:100%; padding:10px; margin-bottom:10px; background-color:#ff9933; color:white; border:none; border-radius:5px; cursor:pointer;">
      <a href = "/profile" style="color:white; text-decoration: none;">My Profile</a>
    </button>
    <button  style="width:100%; padding:10px; background-color:#d32f2f; color:white; border:none; border-radius:5px; cursor:pointer;">
      <a href = "/user/logout" style="color:white; text-decoration: none;">Logout</a>
    </button>
    <br><br>
    <button onclick="closeSidebar()" style="background:none; border:none; color:#666; cursor:pointer;">Close ‚úñ</button>
  </div>

      <%}%>
    </div>
  </nav>

  <!-- Quiz Section -->
  <section class="quiz-section">
    <h1>Competitive Exam Quizzes</h1>
    
 <%if(exam.length > 0){ %>
      <%exam.forEach(function(val) { %>

    <div class="quiz-category">
      <h2><%=val.name%></h2>
      <div class="quiz-questions" id="ssc-cgl">
        <p><%=val.description%> <button  style="display: inline; position: relative; padding:10px; background-color: #f1de31; color:rgb(247, 149, 37); border:none; border-radius:5px; font-weight: bold; cursor:pointer;">
      <a href = "/quiz/<%=val.name%>" style="color:rgb(20, 19, 19); text-decoration: none;">Take Quiz</a>
    </button></p>
      </div>
    </div>
 <%})%>
     <%} else {%>
      <h2>There is no any Quix Exam Yet</h2>
      <div class="quiz-questions" id="upsc-prelims">
        <p>Coming soon...</p>
      </div>
    </div>
      
<%}%>
      <button  style="display: inline; padding:10px; background-color: #ff9933; color:white; border:none; border-radius:5px; font-weight: bold; cursor:pointer;">
      <a href = "/quiz/createQuizExam" style="color:white; text-decoration: none;">Add Quiz Exam</a>
    </button>

    <!-- Add more categories as needed -->

  </section>


  <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/test">Test</a></li>
          <li><a href="/quiz">Quiz</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h3>Contact Us</h3>
        <p>Email: support@safrontest.com</p>
        <p>Phone: +91 98765 43210</p>
      </div>
      <div class="footer-section">
        <h3>Follow Us</h3>
        <p>üìò Facebook | üê¶ Twitter | üì∏ Instagram</p>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; 2025 Safron Mock Test. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/quiz.js"></script>
  <script src="/js/navbar.js"></script>
</body>
</html>
